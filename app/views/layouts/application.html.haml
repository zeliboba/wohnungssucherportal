!!! 5

%html{:lang => I18n.locale}
  %head
    %title flats.phillipoertel.com
  
    = stylesheet_link_tag :all
    = stylesheet_link_tag "jquery/jquery-ui", "jquery/jquery-ui-timepicker-addon"
  
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery-ui-timepicker-addon', 'maps'
    = csrf_meta_tag
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true&amp;key=GOOGLE_MAPS_API_KEY"

    %body{:id => params[:controller], :onload => (@initialize ? 'initialize();' : '')}

      - [:notice, :error, :alert].each do |what|
        - if flash[what]
          %p.flash{:id => "flash-#{what}"}
            = flash[what].respond_to?(:full_messages) ? flash[what].full_messages.join("<br />") : flash[what]

      = yield      